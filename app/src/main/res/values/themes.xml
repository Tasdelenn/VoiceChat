<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.VoiceChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.VoiceChat.Button</item>
    </style>

    <!-- Custom button style -->
    <style name="Widget.VoiceChat.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/button_enabled</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Recording button style -->
    <style name="Widget.VoiceChat.Button.Recording">
        <item name="backgroundTint">@color/status_recording</item>
    </style>

    <!-- Playing button style -->
    <style name="Widget.VoiceChat.Button.Playing">
        <item name="backgroundTint">@color/status_playing</item>
    </style>
</resources> 